<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.ning.maven.plugins.duplicate-finder-maven-plugin</groupId>
    <artifactId>test-resource-conflict-fail</artifactId>
    <version>@project.version@</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.ning.maven.plugins.duplicate-finder-maven-plugin</groupId>
            <artifactId>first-jar</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.ning.maven.plugins.duplicate-finder-maven-plugin</groupId>
            <artifactId>second-jar</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>verify</defaultGoal>

        <plugins>
            <plugin>
                <groupId>com.ning.maven.plugins</groupId>
                <artifactId>duplicate-finder-maven-plugin</artifactId>
                <version>@project.version@</version>
                <configuration>
                    <printEqualFiles>true</printEqualFiles>
                    <failBuildInCaseOfConflict>true</failBuildInCaseOfConflict>
<!--
                    <failBuildInCaseOfEqualContentConflict>false</failBuildInCaseOfEqualContentConflict>
                    <failBuildInCaseOfDifferentContentConflict>false</failBuildInCaseOfDifferentContentConflict>
                    <ignoredResources>
                        <ignoredResource>conflict-same-content</ignoredResource>
                        <ignoredResource>conflict-different-content</ignoredResource>
                    </ignoredResources>
-->
                    <checkCompileClasspath>false</checkCompileClasspath>
                    <checkRuntimeClasspath>false</checkRuntimeClasspath>
                    <checkTestClasspath>true</checkTestClasspath>
                </configuration>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
